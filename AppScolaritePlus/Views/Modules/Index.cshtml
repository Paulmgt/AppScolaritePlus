@model IEnumerable<AppScolaritePlus.Models.Modules>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="dashboardIndex">
    <div class="dashboardCounter">
        <p>
            <a asp-action="Create" class="goldButton">Ajouter un parcour</a>
        </p>
        <div class="Counter">
            @{
                int sum = 0;
                foreach (var item in Model)
                {
                    sum += Convert.ToInt32(item.Id);
                }
            }
            <h1>@Html.DisplayTextFor(m => sum)</h1>
            <p>Modules enregistrer</p>
        </div>
    </div>
    <div class="dashboardItems">
@foreach (var item in Model) 
    {

                <div class="items">
                    <div class="itemsImages"> 
                        <img src="~/photos/@Html.DisplayFor(modelItem => item.Logo)" class="itemsImages"/>
                    </div>
                    <div class="itemsText">
                        <h1>@Html.DisplayFor(modelItem => item.Nom)</h1>
                        <p>@Html.DisplayFor(modelItem => item.Descriptif)</p> 
                        <p>@Html.DisplayFor(modelItem => item.Resume)</p>
                        <p>@Html.DisplayFor(modelItem => item.Infos)</p>
                        <p>@Html.DisplayFor(modelItem => item.Parcours.Intitule)</p>
                       <p>  @Html.DisplayFor(modelItem => item.UnitePedagogique.Designation)</p>
                      

                    </div>
                    <div class="itemsActions">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="edit">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                                <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
                            </svg>
                        </a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="details">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-list-nested" viewBox="0 0 16 16">
                                <path fill-rule="evenodd" d="M4.5 11.5A.5.5 0 0 1 5 11h10a.5.5 0 0 1 0 1H5a.5.5 0 0 1-.5-.5zm-2-4A.5.5 0 0 1 3 7h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm-2-4A.5.5 0 0 1 1 3h10a.5.5 0 0 1 0 1H1a.5.5 0 0 1-.5-.5z"/>
                            </svg>
                        </a> 
                        <a asp-action="Delete" asp-route-id="@item.Id" class="delete">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-square" viewBox="0 0 16 16">
                                <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z"/>
                                <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
                            </svg>
                        </a>
                    </div>
                </div>    
     }
    </div>
</section>
