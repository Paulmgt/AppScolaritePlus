@model AppScolaritePlus.Models.Modules

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="bg-white text-black">
    <div class="container py-3">
      <div class="bg-white mt-n5 mt-md-n6 px-3 px-md-0">
        <div class="row justify-content-center py-4 py-lg-5">
          <div class="col-md-10 col-lg-8">
           <div style="text-align: center">
               <h1>Créer</h1>
               <h4>Module</h4>
           </div>
           <form class="py-3" asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
              <div class="mb-4">
                <label asp-for="Nom"  class="form-label"> Nom <span class="text-secondary">*</span></label> 
                <input asp-for="Nom" type="text" class="form-control" id="inputName" placeholder="Entrer Le Nom du Module" required="">
              </div>
              <div class="mb-4">
                <label asp-for="Parcours" class="form-label"> Parcours <span class="text-secondary">*</span></label>
                <select asp-for="ParcoursId" class ="form-control" id="selectParcours" asp-items="ViewBag.ParcoursId" placeholder="Selectioné le Parcours" required=""></select>
            </div>
             <div class="mb-4">
                <label asp-for="UnitePedagogique"lass="form-label"> Unités Pédagogiques <span class="text-secondary">*</span></label>
                <select asp-for="UnitesPedagogiqueId" id="selectParcours" 
                class ="form-control" asp-items="ViewBag.UnitesPedagogiqueId" 
                placeholder="Selectioné les Unitées Pédagogiques" required="">
                     
               </select> 
            </div>
            <div class="mb-4">
                <label asp-for="Infos" class="form-label">Infos <span class="text-secondary">*</span></label>
                <input asp-for="Infos" type="text" class="form-control" id="inputInfos" placeholder="Entrer les Infos" required="">
              </div> 
              <div class="mb-4">
                <label asp-for="Descriptif" class="form-label"> Descriptif <span class="text-secondary">*</span></label>
                <textarea asp-for="Descriptif" class="form-control" id="DescriptifTextarea" rows="4" placeholder="Entrée Votre Descriptif"  required=""></textarea>
              </div> 
              <div class="mb-4">
                <label asp-for="Resume" class="form-label"> Resume <span class="text-secondary">*</span></label>
                <textarea asp-for="Resume"class="form-control" id="ResumeTextarea" rows="3" placeholder="Entrée Votre Resume"  required=""></textarea>
              </div> 
              <div class="mb-4">
                <label asp-for="Logo"  class="form-label"> Logo <span class="text-secondary">*</span></label>
                <input asp-for="Logo" onchange="document.getElementById('photoModules')
                    .src=window.URL
                    .createObjectURL(this.files[0])" type="file" class="form-control" />
                <img id="photoModules" class="fileImage"/>
            </div>

              <button type="submit" value="Create" class="btn btn-dark">Créer</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

  

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

